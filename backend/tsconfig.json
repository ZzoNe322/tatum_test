{
	"compilerOptions": {
		"target": "ES2020",
		"module": "ESNext",
		"moduleResolution": "Node",
		"rootDir": "./src",
		"outDir": "./dist",
		"strict": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"resolveJsonModule": true,
		"jsx": "react"
	},
	"ts-node": {
		"esm": true
	},
	"include": ["src"],
	"exclude": ["node_modules"]
}